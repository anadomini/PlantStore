@model HomeViewModel

<h3 class="text-center">New Releases</h3>
<div class="row mt-4 mb-2">
    @{
        @if (User.IsInRole("Admin"))
        {
            <div class="float-end">
                <p><a class="btn btn-warning btn-space" href="~/Home/Create/">Create</a></p>
            </div>
        }
        foreach (Plant plant in Model.favPlants)
        {
            @Html.Partial("AllPlants", plant);
        }
    }
</div>
