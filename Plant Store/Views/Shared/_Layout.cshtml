<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <header class="container">
        <nav class="navbar navbar-expand-md mb-4">
            <div class="container-fluid" style="padding-left: 0px; padding-right: 0px;">
                <a class="navbar-brand" href="/">Saoirse's Garden</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="~/Home/Category/">Categories</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="~/Cart/">Cart</a>
                            </li>
                        }
                    </ul>
                    <div class="d-flex">
                        <ul class="navbar-nav me-auto mb-2 mb-md-0">
                            @if (User.Identity.IsAuthenticated)
                            {
                                @if (User.IsInRole("Admin"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link active" aria-current="page" href="~/Roles/">Roles</a>
                                    </li>
                                }
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page">Welcome, @User.Identity.Name!</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page">
                                        <form method="post" asp-controller="Account" asp-action="Logout">
                                            <input style="padding: 0px;" type="submit" value="Logout" />
                                        </form>
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="~/Account/Login/">Login</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="~/Account/Register/">Register</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container mt-3">
        @RenderBody()
    </div>
    <footer class="container">
        <p class="float-end">Our contacts: +112233445566</p>
        <p>© 2021 - Saoirse's Garden.com</p>
        <p class="float-end call-name">saoirsesgarden@gmail.com</p>
    </footer>
    <script src="~/js/bootstrap.min.js"></script>
</body>
</html>
