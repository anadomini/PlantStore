@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<h3>Roles List</h3>
<table class="table">
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button style="float:right;" type="submit" class="btn btn-warning">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>
<a style="float: right;" class="btn btn-warning btn-space" href="~/Roles/Create/">Add Role</a>
<a class="btn btn-warning btn-space" href="~/Roles/UserList/">Users List</a>